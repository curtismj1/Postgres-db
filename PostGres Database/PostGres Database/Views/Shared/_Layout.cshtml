@using PostGres_Database.Models
@using PostGres_Database.Classes

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Awesome Car App</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/foundation/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/foundation/js/vendor/modernizr.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AutoProx Update Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if(LoginInfo.is_logged_in == true)
                    {
                        if (LoginInfo.is_logged_in == true)
                        {
                            LoginInfo.is_logged_in = true;
                            <li>@Html.ActionLink("Add Car", "Create", "CarModels")</li>
                            <li>@Html.ActionLink("Edit Entries", "Edit", "CarModels", new { id = LoginInfo.user_id }, null)</li>
                        }
                    }
                    

                    
                </ul>
               @Html.Partial("_LoginPartial", new PostGres_Database.Models.ExternalLoginConfirmationViewModel());
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/foundation/js/foundation.js"></script>
    @Scripts.Render("~/foundation/js")
    <script>
        $(document).foundation();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
